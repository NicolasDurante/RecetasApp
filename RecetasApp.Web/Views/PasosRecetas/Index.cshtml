@model IEnumerable<RecetasApp.Web.Data.Entities.PasosReceta>

@{
    ViewData["Title"] = "Index";
}

<h2>Pasos recetas</h2>
<br />
<p>
    <a asp-action="Create" class="btn btn-success">Agregar Pasos a recetas</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Receta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumPaso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instrucciones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Receta.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumPaso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instrucciones)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
