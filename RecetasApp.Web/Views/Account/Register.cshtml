@model RecetasApp.Web.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Registrarse";
}
    <div class="card-body" style="background-color:whitesmoke;border-radius: 10px; width:500px; padding:20px; margin:0 auto;">
        <h2>Registrar nuevo usuario</h2>
        <br />
        <div class="row" >
            <div class="col-md-4 offset-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="FirstName" style="align-content:center">Nombre</label>
                        <input asp-for="FirstName" class="form-control" style="width:460px" />
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Apellido</label>
                        <input asp-for="LastName" class="form-control" style="width:460px" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Username">Email</label>
                        <input asp-for="Username" class="form-control" style="width:460px"/>
                        <span asp-validation-for="Username" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" style="width:460px" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Confirm">Confirmar</label>
                        <input asp-for="Confirm" type="password" class="form-control" style="width:460px" />
                        <span asp-validation-for="Confirm" class="text-warning"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Registrar nuevo usuario" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

<div class="text-success">
    <p>
        @ViewBag.Message
    </p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}