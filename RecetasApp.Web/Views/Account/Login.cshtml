@model RecetasApp.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

    

    <div class="card-body" style="background-color:whitesmoke;border-radius: 10px; width:500px; padding:20px; margin:0 auto;">
        <h2>Iniciar sesión</h2>
        <br />
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Username" style="width:460px">Nombre de usuario</label>
                        <input asp-for="Username" class="form-control" style="width:440px" />
                        <span asp-validation-for="Username" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" style="width:440px" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" style="width:340px" />
                            <label asp-for="RememberMe" class="form-check-label">Recordarme?</label>
                        </div>
                        <span asp-validation-for="RememberMe" class="text-warning"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Iniciar" class="btn btn-success" style="width:440px" />
                    </div>
                    <br />
                    <div class="form-group">

                        <a asp-action="Register" class="btn btn-primary" style="width:440px">Registrar nuevo usuario</a>

                    </div>
                    <br />
                    <div class="form-group">
                        <a asp-action="RecoverPassword" class="btn btn-link" style="width:440px">Olvidaste tu contraseña?</a>
                    </div>


                </form>
            </div>
        </div>
        </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
