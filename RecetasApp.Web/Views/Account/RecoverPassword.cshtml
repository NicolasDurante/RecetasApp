
@model RecetasApp.Web.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}
    <div class="card-body" style="background-color:whitesmoke; width:500px; padding:20px; margin:0 auto;">
        <h2>Recuperar contraseña</h2>
        <br />
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Email" style="width:450px;">Introduce el Email donde se enviará el correo de recuperación.</label>
                        <input asp-for="Email" class="form-control"style="width:400px; />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>
                    <br />
                    <div>
                        <div>
                            <input type="submit" value="Recuperar contraseña" class="btn btn-success" />
                        </div>
                        <br />
                        <div>
                            <a asp-action="Login" class="btn btn-primary">Volver a iniciar sesión</a>
                        </div>


                    </div>

                </form>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
            </div>
        </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
